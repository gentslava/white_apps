{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "types": ["node"],
    "baseUrl": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include": [
    "./src/**/*.ts",
    "./index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
